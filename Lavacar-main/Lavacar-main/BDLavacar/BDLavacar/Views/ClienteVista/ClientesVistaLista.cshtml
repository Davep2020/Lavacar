@model BDLavacar.Models.sp_RetornaVistaClientes_Result
@{
    ViewBag.Title = "ClientesVistaLista";
    Layout = "~/Views/Shared/_LayoutBDLavacar.cshtml";
}



<h2> @Model.Nombre_P @Model.PApellido @Model.SApellido</h2>
<form action="" method="post">


    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <i class="fas fa-envelope"></i> <label> Correo:</label>
                    <p>@Model.Correo_P</p>
                </div>

                <div class="form-group">
                    <i class="fas fa-user"></i> <label> Nombre:</label>
                    <p>@Model.Nombre_P @Model.PApellido @Model.SApellido</p>
                </div>

                <div class="form-group">
                    <i class="fas fa-wallet"></i> <label> Cédula:</label>
                    <p>@Model.Cedula_P</p>
                </div>


            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <i class="fas card-list"></i> <label> Placa:</label>
                    <p>@Model.Placa_V</p>
                </div>

                <div class="form-group">
                    <i class="fas fa-user"></i> <label> Cantidad Puertas:</label>
                    <p>@Model.Numero_Ruedas_V</p>
                </div>
                <div class="form-group">
                    <i class="fas fa-user"></i> <label> Marca:</label>
                    <p>@*@Model.*@</p>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <i class="fas fa-sliders"></i> <label> Servicio:</label>
                    <p>@Model.Tipo_S</p>
                </div>
                <div class="form-group">
                    <i class="fas fa-list"></i> <label> Cantidad:</label>
                    <p>@Model.Cantidad_FVS</p>
                </div>
                <div class="form-group">
                    <i class="fas fa-cash"></i> <label> Costo:</label>
                    <p>@Model.Total_F</p>
                </div>
            </div>
        </div>
    </div>


    



</form>


