
@{
    ViewBag.Title = "InsertarUsuario";
    Layout = "~/Views/Shared/_LayoutBDLavacar.cshtml";
}

<h2>Insertar nuevo usuario</h2>
<form id="frmNuevoUsuario" method="post">
    <div class="form-group">
        <label>Cédula :</label>
        <input type="text" name="Cedula_P" id="cedula" class="form-control" />
    </div>
    <div class="form-group">
        <label>Genero:</label>
        <select name="Genero_P" id="Genero" class="form-control">
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
        </select>
    </div>
    <div class="form-group">
        <label>Fecha de nacimiento:</label>
        <input type="date" name="Fecha_Nacimiento_P" id="nacimiento" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" name="Nombre_P" id="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Primer Apellido:</label>
        <input type="text" name="PApellido" id="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Segundo Apellido:</label>
        <input type="text" name="SApellido" id="Nombre" class="form-control" />
    </div>    <div class="form-group">
        <label>Correo Electrónico:</label>
        <input type="email" name="Correo_P" id="Correo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Provincia:</label>
        <select name="Id_Provincia_P" id="provincia" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Cantón:</label>
        <select name="Id_Canton_P" id="canton" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Distrito:</label>
        <select name="Id_Distrito_P" id="distrito" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Tipo de Persona:</label>
        <select name="Id_Tipo_P" id="Tipo_TP" class="form-control">
            <option value="">Seleccione un país </option>
            @{
                foreach (BDLavacar.Models.sp_RetornaTipoPersona_Result Tipo in this.ViewBag.TipoPersona)
                {
                    <option value="@Tipo.Id_TipoPersona_TP"> @Tipo.Tipo_TP  </option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Insertar" id="btnInsertar" class="btn btn-success" />
    </div>
</form>
@section scripts{

    <script src="~/Scripts/Clientes/ClienteLocalizacion.js"></script>
    <script src="~/Scripts/Validaciones/ValidacionInsertaCliente.js"></script>
}
